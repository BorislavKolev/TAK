    <!-- ======= Property Grid ======= -->
    <section class="property-grid grid">    
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="grid-option">
                        <form asp-action="All" method="get">
                            <select class="custom-select" name="filter">
                                <option value="">All</option>
                                <option value="Restaurant" name="Restaurant">Restaurant</option>
                                <option value="Caffe" name="Caffe">Caffe</option>
                                <option value="Hotel" name="Hotel">Hotel</option>
                            </select>
                            <input type="submit" value="Filter" class="btn btn-default" />
                        </form>
                    </div>
                </div>
                @foreach (var location in Model.Locations)
                {
                    <div class="col-md-4">
                        <div class="card-box-a card-shadow">
                            <div class="img-box-a">
                                <img src="@location.ImageUrl" alt="" class="img-a img-fluid">
                            </div>
                            <div class="card-overlay">
                                <div class="card-overlay-a-content">
                                    <div class="card-header-a">
                                        <h2 class="card-title-a">
                                            <a href="@location.LocationUrl">
                                                @location.Name
                                            </a>
                                        </h2>
                                    </div>
                                    <div class="card-body-a">
                                        <a href="@location.LocationUrl" class="link-a">
                                            Click here to view
                                            <span class="ion-ios-arrow-forward"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <nav class="pagination-a">
                        <ul class="pagination justify-content-end">
                            @if (this.Model.CurrentPage == 1)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">
                                        <span class="ion-ios-arrow-back"></span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-route="locationsRoute" asp-route-name="" asp-route-page="@(this.Model.CurrentPage - 1)">
                                        <span class="ion-ios-arrow-back"></span>
                                    </a>
                                </li>
                            }
                            @for (int i = 1; i <= this.Model.PagesCount; i++)
                            {
                                var active = i == this.Model.CurrentPage ? "active" : string.Empty;
                                <li class="page-item @active">
                                    <a asp-route="locationsRoute" asp-route-name="" asp-route-page="@i">@i</a>
                                </li>
                            }
                            @if (this.Model.CurrentPage == this.Model.PagesCount)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">
                                        <span class="ion-ios-arrow-forward"></span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item next">
                                    <a asp-route="locationsRoute" asp-route-name="" asp-route-page="@(this.Model.CurrentPage + 1)">
                                        <span class="ion-ios-arrow-forward"></span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section><!-- End Property Grid Single-->

</main><!-- End #main -->