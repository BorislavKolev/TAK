<section class="contact">
    <div class="container">
        <form asp-action="Create" method="post" role="form" class="php-email-form" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input asp-for="Name" type="text" name="name" class="form-control form-control-lg form-control-a" placeholder="Name" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>

                        <span asp-validation-for="Description"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Adress"></label>
                        <input asp-for="Adress" type="text" name="adress" class="form-control form-control-lg form-control-a" placeholder="Adress" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="Adress"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" type="text" name="phoneNumber" class="form-control form-control-lg form-control-a" placeholder="PhoneNumber" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Email"></label>
                        <input asp-for="Email" type="text" name="email" class="form-control form-control-lg form-control-a" placeholder="Email" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Website"></label>
                        <input asp-for="Website" type="text" name="website" class="form-control form-control-lg form-control-a" placeholder="Website" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="Website"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="FacebookPage"></label>
                        <input asp-for="FacebookPage" type="text" name="facebookPage" class="form-control form-control-lg form-control-a" placeholder="FacebookPage" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="FacebookPage"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="InstagramPage"></label>
                        <input asp-for="InstagramPage" type="text" name="instagramPage" class="form-control form-control-lg form-control-a" placeholder="InstagramPage" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="InstagramPage"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="MapLink"></label>
                        <input asp-for="MapLink" type="text" name="mapLink" class="form-control form-control-lg form-control-a" placeholder="MapLink" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="MapLink"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Perks"></label>
                        <input asp-for="Perks" type="text" name="perks" class="form-control form-control-lg form-control-a" placeholder="Perks" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">
                        <span asp-validation-for="Perks"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="control-label" asp-for="Type"></label>
                    <select asp-for="Type" class="form-control">
                        <option value="Ресторанти">Ресторанти</option>
                        <option value="Хотели">Хотели</option>
                        <option value="Кафета">Кафета</option>
                    </select>
                    <span asp-validation-for="Type"></span>
                </div>
                <div class="col-md-12 mb-3" enctype="multipart/form-data">
                    <hr />
                    <label class="control-label" asp-for="Pictures"></label>
                    <input asp-for="Pictures" type="file" name="Pictures" multiple class="form-control" />
                </div>

                <div class="text-center">
                    <button class="btn btn-color btn-rounded" type="submit">Submit</button>
                </div>

            </div>
        </form>
    </div>
</section> 