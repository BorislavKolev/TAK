@model TAK.Web.ViewModels.Locations.LocationDeleteViewModel
@{
    ViewData["Title"] = "Remove location";
}

<h1>@this.ViewData["Title"]</h1>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12 col-lg-8">
            <div class="title-single-box">
                <h1 class="title-single">Remove location</h1>
            </div>
        </div>
        <div class="col-md-12 col-lg-4">
        </div>
    </div>
</div>

<section class="contact">
    <div class="container">
        <form asp-controller="Locations" asp-action="Remove" method="post">
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="5" disabled=""></textarea>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="Adress"></label>
                    <input asp-for="Adress" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="Website"></label>
                    <input asp-for="Website" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="FacebookPage"></label>
                    <input asp-for="FacebookPage" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="InstagramPage"></label>
                    <input asp-for="InstagramPage" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="MapLink"></label>
                    <input asp-for="MapLink" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="Perks"></label>
                    <input asp-for="Perks" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    <label class="control-label" asp-for="Type"></label>
                    <input asp-for="Type" class="form-control form-control-lg form-control-a" disabled="">
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="text-center">
                    <p>Are you sure you want to delete this location?</p>
                    <input type="submit" value="Yes!" class="btn btn-danger btn-rounded" />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </form>
    </div>
</section>
