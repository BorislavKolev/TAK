@model TAK.Web.ViewModels.Locations.LocationDetailsViewModel
@using System.Globalization;
@{
    this.ViewData["Title"] = this.Model.Name;
}
<main id="main">

    <!-- ======= Intro Single ======= -->
    <section class="intro-single">
       
    </section><!-- End Intro Single-->
    <!-- ======= Property Single ======= -->
    <section class="property-single nav-arrow-b">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="title-box-d">
                        <h3 class="title-d">@Model.Name</h3>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div id="property-single-carousel" class="owl-carousel owl-arrow gallery-property">
                        @foreach (var pictureUrl in Model.Urls)
                        {
                            <div class="carousel-item-b">
                                <img src="@pictureUrl">
                            </div>
                        }
                    </div>
                    <div class="row justify-content-between">
                        <div class="col-md-5 col-lg-4">
                            <div class="property-summary">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="title-box-d section-t4">
                                            <h3 class="title-d">Контакти</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="summary-list">
                                    <ul class="list">
                                        @if (!String.IsNullOrWhiteSpace(Model.Adress))
                                        {
                                            <li class="d-flex justify-content-between">
                                                <strong>Адрес:</strong>
                                                <span>@Model.Adress</span>
                                            </li>
                                        }
                                        @if (!String.IsNullOrWhiteSpace(Model.Email))
                                        {
                                            <li class="d-flex justify-content-between">
                                                <strong>Имейл:</strong>
                                                <span>@Model.Email</span>
                                            </li>
                                        }
                                        @if (!String.IsNullOrWhiteSpace(Model.PhoneNumber))
                                        {
                                            <li class="d-flex justify-content-between">
                                                <strong>Телефон:</strong>
                                                <span>@Model.PhoneNumber</span>
                                            </li>
                                        }
                                        @if (!String.IsNullOrWhiteSpace(Model.Website))
                                        {
                                            <li class="d-flex justify-content-between">
                                                <strong>Уебсайт:</strong>
                                                <a href="https://@Model.Website"><i class="fa fa-globe"></i></a>
                                            </li>

                                        }
                                        @if (!String.IsNullOrWhiteSpace(Model.FacebookPage))
                                        {
                                            <li class="d-flex justify-content-between">
                                                <strong>Facebook:</strong>
                                                <a href="https://@Model.FacebookPage"><i class="fa fa-facebook-square"></i></a>
                                            </li>
                                        }
                                        @if (!String.IsNullOrWhiteSpace(Model.InstagramPage))
                                        {

                                            <li class="d-flex justify-content-between">
                                                <strong>Instagram:</strong>
                                                <a href="https://@Model.InstagramPage"><i class="fa fa-instagram"></i></a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7 col-lg-7 section-md-t3">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="title-box-d">
                                        <h3 class="title-d">За нас</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="property-description">
                                <p class="description color-text-a">
                                    @Model.Description
                                </p>
                            </div>
                            <div class="row section-t3">
                                <div class="col-sm-12">
                                    <div class="title-box-d">
                                        <h3 class="title-d">Предлагаме</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="amenities-list color-text-a">
                                <ul class="list-a no-margin">
                                    @foreach (var perk in Model.LocationPerks)
                                    {
                                        <li>@perk</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-10 offset-md-1">
                    <ul class="nav nav-pills-a nav-pills mb-3 section-t3" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-map-tab" data-toggle="pill" href="#pills-map" role="tab" aria-controls="pills-map" aria-selected="false">Локация</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-map" role="tabpanel" aria-labelledby="pills-map-tab">
                            <iframe src="@Model.MapLink" width="100%" height="460" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
            @if (this.User.IsInRole("Administrator"))
            {
            <div class="text-center">
                <a asp-controller="Locations" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-b">Edit</a>
                <a asp-controller="Locations" asp-action="Remove" asp-route-id="@Model.Id" type="submit" class="btn btn-b">Delete</a>          
            </div>
            }
        </div>
    </section><!-- End Property Single-->

</main><!-- End #main -->
