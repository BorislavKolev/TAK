<!-- ======= Contact Single ======= -->
<section class="contact">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="contact-map box">
                    <div id="map" class="contact-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d368.99112153993724!2d22.6837203464311!3d42.28003952650842!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14aa9cf13f4ea1a1%3A0x49d9f9fc1fcc8219!2z0YPQuy4g4oCe0J7RgtC10YYg0J_QsNC40YHQuNC54oCcIDExLCAyNTAwINCa0Y7RgdGC0LXQvdC00LjQuyDQptC10L3RgtGK0YAsINCa0Y7RgdGC0LXQvdC00LjQuw!5e0!3m2!1sbg!2sbg!4v1611050132664!5m2!1sbg!2sbg" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 section-t8">
                <div class="row">
                    <div class="col-md-7">
                        <form asp-action="SendEmail" asp-controller="Contacts" method="post" role="form" class="php-email-form">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <input type="text" name="name" class="form-control form-control-lg form-control-a" placeholder="Име" data-rule="minlen:4" data-msg="Моля въведете поне 4 символа!" id="name">
                                        <div class="validate"></div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <input name="email" type="email" class="form-control form-control-lg form-control-a" placeholder="Имейл" data-rule="email" data-msg="Моля въведете валиден имейл!" id="email">
                                        <div class="validate"></div>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <div class="form-group">
                                        <input type="text" name="subject" class="form-control form-control-lg form-control-a" placeholder="Тема" data-rule="minlen:4" data-msg="Моля въведете поне 8 символа за 'Тема'" id="subject">
                                        <div class="validate"></div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea name="message" class="form-control" name="message" cols="45" rows="8" data-rule="required" data-msg="Моля въведете съдържанието на имейла" placeholder="Съобщение" id="message"></textarea>
                                        <div class="validate"></div>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <div class="mb-3">
                                        <div class="loading">Зареждане</div>
                                        <div class="error-message"></div>
                                        <div class="sent-message">Вашият имейл беше изпратен успешно. Благодарим Ви!</div>
                                    </div>
                                </div>

                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-a">Изпрати съобщение</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-5 section-md-t3">
                        <div class="icon-box section-b2">
                            <div class="icon-box-icon">
                                <span class="ion-ios-paper-plane"></span>
                            </div>
                            <div class="icon-box-content table-cell">
                                <div class="icon-box-title">
                                    <h4 class="icon-title">За връзка с нас</h4>
                                </div>
                                <div class="icon-box-content">
                                    <p class="mb-1">
                                        <span class="color-a">tourism.kyustendil@gmail.com</span>
                                    </p>
                                    <p class="mb-1">
                                        <span class="color-a">+359 898 490 664</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="icon-box section-b2">
                            <div class="icon-box-icon">
                                <span class="ion-ios-pin"></span>
                            </div>
                            <div class="icon-box-content table-cell">
                                <div class="icon-box-title">
                                    <h4 class="icon-title">Адрес</h4>
                                </div>
                                <div class="icon-box-content">
                                    <p class="mb-1">
                                        <span class="color-a">ул. „Отец Паисий“ № 11</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="icon-box">
                            <div class="icon-box-icon">
                                <span class="ion-ios-redo"></span>
                            </div>
                            <div class="icon-box-content table-cell">
                                <div class="icon-box-title">
                                    <h4 class="icon-title">Социални мрежи</h4>
                                </div>
                                <div class="icon-box-content">
                                    <div class="socials-footer">
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <a href="https://www.facebook.com/%D0%A1%D0%B4%D1%80%D1%83%D0%B6%D0%B5%D0%BD%D0%B8%D0%B5-%D0%BF%D0%BE-%D1%82%D1%83%D1%80%D0%B8%D0%B7%D1%8A%D0%BC-%D0%B3%D1%80-%D0%9A%D1%8E%D1%81%D1%82%D0%B5%D0%BD%D0%B4%D0%B8%D0%BB-116311743246651" class="link-one">
                                                    <i class="fa fa-facebook" aria-hidden="true"></i>
